<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1>Create a new review for <%=@restaurant.name%></h1>

      <%= simple_form_for [ @restaurant, @review ] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: 0..5 %>
      <%= f.submit class: 'btn btn-primary mt-3' %>
      <% end %>
    </div>
  </div>
</div>
